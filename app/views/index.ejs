		<div class="text-right">
			<p>
				<span id="usuario-logado">Usuário <b><%=usuario %></b></span>
				<a href="/logout">
					<span class="glyphicon glyphicon-off" aria-hidden="true"></span>
				</a>
			</p>
		</div>
		<% } %>

		<div ng-view></div>
		<!-- build:js js/index.min.js -->
